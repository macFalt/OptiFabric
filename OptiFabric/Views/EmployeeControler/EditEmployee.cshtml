@model OptiFabricMVC.Application.ViewModels.EmployeeVM.EmployeeDetailsVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Imie</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Nazwisko</label>
                <input asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Stanowisko</label>
                <input asp-for="Position" class="form-control"/>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edytuj" class="btn btn-primary"/>
            </div>
        </form>
    </div>

</div>