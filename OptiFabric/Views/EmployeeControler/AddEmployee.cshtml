@model OptiFabricMVC.Application.ViewModels.EmployeeVM.NewEmployeeVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Dodaj produkt</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvailableRoles" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Imie</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Nazwisko</label>
                <input asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Position" class="control-label">Stanowisko</label> *@
            @*     <input asp-for="Position" class="form-control"/> *@
            @*     <span asp-validation-for="Position" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Password" class="control-label">Hasło</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrLogin" class="control-label">Identyfikator</label>
                <input asp-for="NrLogin" class="form-control"/>
                <span asp-validation-for="NrLogin" class="text-danger"></span>
            </div>

            <label for="SelectedRole">Wybierz rolę</label>
            <select asp-for="SelectedRole" asp-items="@(new SelectList(Model.AvailableRoles))" class="form-control">
                <option value="">-- Wybierz rolę --</option>
            </select>

            
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary"/>
            </div>
        </form>
    </div>

</div>